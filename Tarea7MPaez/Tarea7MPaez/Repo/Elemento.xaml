<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarea7MPaez.Elemento">
    <ContentPage.Content>
        <StackLayout Padding="10" Spacing="10">
            <Label x:Name="Mensaje"></Label>
            <Entry Placeholder="Ingrese tu Nombre"
                   x:Name="nombre"></Entry>
            <Entry Placeholder="Ingrese tu Email"
                   x:Name="usuario"></Entry>
            <Entry Placeholder="Ingrese tu Constraseña"
                   x:Name="contra"></Entry>

            <Button Text="Actualizar"
                    Clicked="Button_Clicked" BackgroundColor="LawnGreen"></Button>
            <Button Text="Eliminar"
                   BackgroundColor="Red"  Clicked="Button_Clicked_1"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>